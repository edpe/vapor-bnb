<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <ul id="manage-bookings">
      <% @bookings.each do |booking| %>
        <% if !booking.confirmed %>
        <li>
          User <%= booking.user.username %>
          Space: <%= booking.space.name %>
          Date: <%= booking.date.strftime("%d/%m/%Y") %>
          Price: <%= booking.space.price %>
          <form action=<%="/bookings/confirm/" + booking.id.to_s %> >
            <input type="submit" value=" c o n f i r m "  />
          </form>
        </li>
        <% end %>
      <% end %>
    </ul>
  </body>
</html>
